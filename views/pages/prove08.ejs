<!DOCTYPE html>
<html>

<head>
  <% include ../includes/header.ejs %>
</head>

<body>
  <% include ../includes/nav.ejs %>
  <div class="jumbotron text-center">
    <div class="container">
      <h1><%= title %></h1>
      <p>This is the placeholder for the Prove 08 Assignment</p>
      <div class="container-lg" style="display: flex; flex-flow: row wrap; justify-content: space-between; align-items: center;">
        <div style="display: flex; flex-flow: row; align-items: center;">
          <% if (pageNum != 1) { %> 
          <form action="/prove08/paginateJson" method="GET" style="margin-right: 5px;">
            <input type="hidden" name="previous" value="-1" />
            <input type="hidden" name="page" value="<%= pageNum %>" />
            <input type="hidden" name="limit" value="<%= limit %>" />
            <button class="btn btn-primary btn-theme" type="submit">Previous Page</button>
          </form>
          <% } %>
          <% if (totalCount < totalObjects - 10) { %>  
          <form action="/prove08/paginateJson" method="GET" id="nextBtn" style="margin-left: 5px;">
            <input type="hidden" name="next" value="1" />
            <input type="hidden" name="page" value="<%= pageNum %> " />
            <input type="hidden" name="limit" value="<%= limit %>" />
            <button class="btn btn-primary btn-theme" type="submit">Next Page</button>
          </form>
          <% } %>
        </div>
        <div>
          <h4 style="font-weight: 400; color: #ddd;">Page Number: <span style="color: #fff; font-weight: bold;"><%= pageNum %></span></h4>
        </div>
      </div>

      <div class="container-lg">

      </div>

      <div class="container-lg">
        <div class="row">
          <% jsonContent.forEach((object) => { %>
          <div class="col-4 my-3 d-flex align-items-stretch">
            <div class="card shadow-lg rounded">
              <div class="embed-responsive embed-responsive-16by9"><img src="<%= object.imageUrl %>"
                  class="card-img-top embed-responsive-item" alt="<%= object.name %>"></div>
              <div class="card-body">
                <h3 class="card-title" style="color: #000;"><%= object.name %></h3>
                <p class="card-text" style="color: #000; font-size: 16px;"><%= object.description %></p>
                <p class="card-text" style="color: #000;"><%= object.price %></p>
                <p class="card-text" style="color: #000; font-size: 14px;"><%= object.tags %></p>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
  </div>
  <div class="container">

  </div>


</body>

</html>