<!DOCTYPE html>
<html>

<head>
    <% include ../includes/header.ejs %>
</head>

<body>
    <% include ../includes/nav.ejs %>
    <div class="container">
        <h2>Enter Your Book Information</h2>
        <form action="/prove02/addBook" method="POST" style="padding: 2rem 0; margin: 0">
            <div class="form-group">
                <label for="bookTitle" class="col-2 col-form-label">Book Title</label>
                <input class="form-control" type="text" name="bookTitle" placeholder="Ex.) The Hardy Boys (REQUIRED)"
                    required />
            </div>
            <div class="form-group">
                <label for="bookPublishDate" class="col-2 col-form-label">Date</label>
                <div class="col-10">
                    <input class="form-control" type="date" value="2011-08-19" name="bookPublishDate">
                </div>
            </div>
            <div class="form-group">
                <label for="bookSummary" class="col-2 col-form-label">Book Summary</label>
                <textarea class="form-control" type="text" name="bookSummary"
                    placeholder="Ex.) The Hardy Boys are two young detectives, off to fight against crime."></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit Book</button>
        </form>
    </div>
    <div class="container">
        <% if (books.length > 0) { %>
        <form action="/prove02/removeBook" method="POST" class="form-inline p-2" style="padding: 2rem 0; margin: 0">
            <label for="booksList">Delete A Book:</label>
            <select class="form-control form-control-lg" name="usersList">
                <% for (book of books) { %>
                <option value="none" selected disabled hidden>
                    Select A Book
                </option>
                <option><%= book.bookTitle %> </option>
                <% }  %>
            </select>
            <button class="btn btn-primary" type="submit">Delete Book</button>
        </form>
        <% } else { %>
        <h4 style="color: red; font-weight: 400;">Currently, there isn't any books to delete.</h4>
        <% } %>
    </div>
    <div class="container" style="display: flex; flex-flow: row wrap;">
        <% if (books.length > 0) { %>
        <% for (book of books) { %>
        <div class="card" style="width: 18rem; border: 1px solid #bbb; border-radius: 6px; padding: 1rem 2rem;">
            <div class="card-body">
                <h5 class="card-title"><%= book.bookTitle %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= book.bookPublishDate %></h6>
                <p class="card-text" style="word-wrap: break-word;"><%= book.bookSummary %></p>
            </div>
        </div>
        <% } %>
        <% } %>
    </div>
</body>

</html>